{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "definitions": {
    "GamePreference": {
      "type": "object",
      "properties": {
        "isInteractive": {
          "type": "boolean"
        },
        "shuffleQuestions": {
          "type": "boolean"
        }
      },
      "additionalProperties": false,
      "required": [
        "isInteractive",
        "shuffleQuestions"
      ]
    },
    "PlayGameRequestBody": {
      "type": "object",
      "properties": {
        "quizId": {
          "type": "string"
        },
        "isInteractive": {
          "type": "boolean"
        },
        "shuffleQuestions": {
          "type": "boolean"
        }
      },
      "additionalProperties": false,
      "required": [
        "isInteractive",
        "quizId",
        "shuffleQuestions"
      ]
    },
    "GameResult": {
      "type": "object",
      "properties": {
        "unanswered": {
          "type": "number"
        },
        "correct": {
          "type": "number"
        },
        "wrong": {
          "type": "number"
        },
        "questionsState": {
          "type": "array",
          "items": {
            "$ref": "#/definitions/QuestionState"
          }
        }
      },
      "additionalProperties": false,
      "required": [
        "correct",
        "questionsState",
        "unanswered",
        "wrong"
      ]
    },
    "GameSummary": {
      "type": "object",
      "properties": {
        "id": {
          "type": "string"
        },
        "userId": {
          "type": "string"
        },
        "quizId": {
          "type": "string"
        },
        "quizTitle": {
          "type": "string"
        },
        "isPlaying": {
          "type": "boolean"
        },
        "result": {
          "$ref": "#/definitions/GameResult"
        },
        "isInteractive": {
          "type": "boolean"
        },
        "shuffleQuestions": {
          "type": "boolean"
        }
      },
      "additionalProperties": false,
      "required": [
        "id",
        "isInteractive",
        "isPlaying",
        "quizId",
        "quizTitle",
        "shuffleQuestions",
        "userId"
      ]
    },
    "Game": {
      "type": "object",
      "properties": {
        "questions": {
          "type": "array",
          "items": {
            "anyOf": [
              {
                "additionalProperties": false,
                "type": "object",
                "properties": {
                  "id": {
                    "type": "string"
                  },
                  "type": {
                    "type": "string",
                    "enum": [
                      "multiple-choice"
                    ]
                  },
                  "choices": {
                    "type": "array",
                    "items": {
                      "type": "string"
                    }
                  },
                  "question": {
                    "type": "string"
                  },
                  "answer": {
                    "type": "number"
                  }
                },
                "required": [
                  "choices",
                  "id",
                  "question",
                  "type"
                ]
              },
              {
                "additionalProperties": false,
                "type": "object",
                "properties": {
                  "id": {
                    "type": "string"
                  },
                  "type": {
                    "type": "string",
                    "enum": [
                      "short-text"
                    ]
                  },
                  "question": {
                    "type": "string"
                  },
                  "answer": {
                    "type": "string"
                  }
                },
                "required": [
                  "id",
                  "question",
                  "type"
                ]
              },
              {
                "additionalProperties": false,
                "type": "object",
                "properties": {
                  "id": {
                    "type": "string"
                  },
                  "type": {
                    "type": "string",
                    "enum": [
                      "number"
                    ]
                  },
                  "question": {
                    "type": "string"
                  },
                  "answer": {
                    "type": "number"
                  }
                },
                "required": [
                  "id",
                  "question",
                  "type"
                ]
              },
              {
                "additionalProperties": false,
                "type": "object",
                "properties": {
                  "id": {
                    "type": "string"
                  },
                  "type": {
                    "type": "string",
                    "enum": [
                      "math"
                    ]
                  },
                  "question": {
                    "type": "string"
                  },
                  "answer": {
                    "type": "string"
                  }
                },
                "required": [
                  "id",
                  "question",
                  "type"
                ]
              }
            ]
          }
        },
        "correctAnswers": {
          "type": "array",
          "items": {
            "type": "number"
          }
        },
        "id": {
          "type": "string"
        },
        "userId": {
          "type": "string"
        },
        "quizId": {
          "type": "string"
        },
        "quizTitle": {
          "type": "string"
        },
        "isPlaying": {
          "type": "boolean"
        },
        "result": {
          "$ref": "#/definitions/GameResult"
        },
        "isInteractive": {
          "type": "boolean"
        },
        "shuffleQuestions": {
          "type": "boolean"
        }
      },
      "additionalProperties": false,
      "required": [
        "id",
        "isInteractive",
        "isPlaying",
        "questions",
        "quizId",
        "quizTitle",
        "shuffleQuestions",
        "userId"
      ]
    },
    "UserState": {
      "type": "object",
      "properties": {
        "user": {
          "$ref": "#/definitions/UserData"
        }
      },
      "additionalProperties": false
    },
    "UserData": {
      "type": "object",
      "properties": {
        "id": {
          "type": "string"
        },
        "name": {
          "type": "string"
        },
        "isAdmin": {
          "type": "boolean"
        }
      },
      "additionalProperties": false,
      "required": [
        "id",
        "isAdmin",
        "name"
      ]
    },
    "LoginRequestBody": {
      "type": "object",
      "properties": {
        "id": {
          "type": "string"
        },
        "password": {
          "type": "string"
        }
      },
      "additionalProperties": false,
      "required": [
        "id",
        "password"
      ]
    },
    "SignupRequestBody": {
      "type": "object",
      "properties": {
        "name": {
          "type": "string"
        },
        "id": {
          "type": "string"
        },
        "password": {
          "type": "string"
        }
      },
      "additionalProperties": false,
      "required": [
        "id",
        "name",
        "password"
      ]
    },
    "QuestionState": {
      "enum": [
        0,
        1,
        2
      ],
      "type": "number"
    }
  }
}